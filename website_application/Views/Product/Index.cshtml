@using view_model.Common;
@using view_model.Catalog.Products;
@model PagedResult<ProductVm>
@{
    var count = 1;
    string valMessage = TempData["success"] as string;
}
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (valMessage == "true")
{
    <link rel="stylesheet" href="~/plugins/toastr/toastr.min.css">
    @section Scripts{
        <script>
            var mesg = "Action Success";
            toastr.success(mesg);
        </script>
    }
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <script src="~/plugins/toastr/toastr.min.js"></script>
}
@if (valMessage == "false")
{
    <link rel="stylesheet" href="~/plugins/toastr/toastr.min.css">
    @section Scripts{
        <script>
            var mesg = "Action Fail";
            toastr.error(mesg);
        </script>
    }
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <script src="~/plugins/toastr/toastr.min.js"></script>
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Products</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Products</a></li>
                    <li class="breadcrumb-item active">List</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title"><a href="Product/Index" data-toggle="tooltip" title="Back to list products">List Products</a></h3>
                <div class="card-tools">
                    <a class="btn btn-success" asp-action="Create" asp-controller="Product">Create New</a>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <form asp-action="Index" method="get" class="float-right" style="padding-bottom:10px">
                    <div class="input-group input-group-sm" style="width: 300px;">
                        <input type="text" name="keyword" class="form-control float-right" placeholder="Search">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </form>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th style="width: 10px">#</th>
                            <th>Name</th>
                            <th>Pucharse Price</th>
                            <th>Price</th>
                            <th>Stock</th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@count</td>
                                <td>@item.Name</td>
                                <td>@item.OriginalPrice</td>
                                <td>@item.Price</td>
                                <td>@item.Stock</td>
                                <td>
                                    <form method="post" asp-action="Delete" asp-controller="Product">
                                        <input hidden name="id" value="@item.Id" />
                                        <a href="/Product/Edit/@item.Id" style="padding-left:10px"><i class="fa fa-edit"></i></a>
                                        <button type="submit" class="btn-link" onclick="return confirm('Do you delete ?')"><i class="fa fa-trash"></i></button>
                                    </form>
                                </td>
                            </tr>
                            count++;
                        }
                        @if (Model.Items.Count == 0)
                        {
                            <tr>
                                <td colspan="6" class="text-center">Sorry , No data avaliable</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
            @await Component.InvokeAsync("Pager", Model)
        </div>

    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->
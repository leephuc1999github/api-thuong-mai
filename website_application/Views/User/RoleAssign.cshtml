@using view_model.System.Users
@model RoleAssignRequest

@{
    ViewData["Title"] = "RoleAssign User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Users</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Users</a></li>
                    <li class="breadcrumb-item active">Role</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<section class="content">
    <div class="container-fluid">
        <div class="card">
            <form method="post" asp-action="RoleAssign">
                <div class="card-header">
                    <h3 class="card-title">Assign Role User</h3>
                    <div class="card-tools">
                        <button type="submit" class="btn btn-success">Approval</button>
                    </div>
                </div>
                <div class="card-body">
                    <input type="hidden" asp-for="Id" />
                    @for (var i = 0; i < Model.Roles.Count; i++)
                    {
                        <div class="form-check form-group">
                            <input class="form-check-input" type="checkbox" asp-for="Roles[i].Selected">
                            <label class="form-check-label">@Model.Roles[i].Name</label>
                            <input type="hidden" asp-for="Roles[i].Id" />
                            <input type="hidden" asp-for="Roles[i].Name" />
                        </div>
                    }
                </div>
            </form>
        </div>
    </div>
</section>
<script type="text/javascript">
    $(document).ready(function () {

    })
</script>>